{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "biome check .",
    "check-types": "turbo check-types",
    "test": "turbo test",
    "format": "biome format --write .",
    "update-pkg": "pnpm update --latest --filter \"*\"",
    "ci:test": "./.github/scripts/test-workflow.sh --local-steps",
    "ci:validate": "./.github/scripts/test-workflow.sh --validate"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@workspace/typescript-config": "workspace:*",
    "lefthook": "^2.0.13",
    "prettier": "^3.7.4",
    "turbo": "^2.7.2",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.2.2",
      "@types/react-dom": "19.2.2"
    }
  }
}
